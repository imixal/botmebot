@model Icogram.ViewModels.Login.ErrorViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Botico</title>
    <!-- Bootstrap -->
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="@Url.Content("~/Content/font-awesome.min.css")" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="@Url.Content("~/Libs/Gentelella/css/custom.min.css")" rel="stylesheet">
    <style>
        .form-login {
            max-width: 350px;
            margin: auto;
        }
    </style>
</head>
<body class="login">
<div>
    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                <img style="vertical-align: sub" alt="botico" src="@Url.Content("~/Content/brain.png")" />
                <h1 class="text-center">
                    Botico
                </h1>
                <div class="form-login">
                    @using (Html.BeginForm("LoginCommand", "Authentication", FormMethod.Post))
                    {
                        <h1>Login Form</h1>
                        <div>
                            <input type="text" class="form-control" name="Username" placeholder="Username" required=""/>
                        </div>
                        <div>
                            <input type="password" class="form-control" name="Password" placeholder="Password" required=""/>
                        </div>

                        <div>
                            <input type="submit" class="btn btn-default submit pull-left" value="Log in">
                            <span class="text-danger" style="font-size: 18px; float: right;">@Model.Error</span>
                        </div>
                    }
                </div>
                <div class="clearfix"></div>
                <div class="col-lg-12 col-md-12">
                    <div class="x_panel text-left" style="font-size: 16px;">
                        @if (Model.Resources.Any(r => r.Name == "Login"))
                        {
                            var myHtmlString = new HtmlString(Model.Resources.First(r => r.Name == "Login").DefaultValue);
                            <div class="x_content">
                                @myHtmlString
                            </div>
                        }
                    </div>
                </div>

                <div class="separator">
                    <div class="clearfix"></div>
                    <br/>
                    <div>
                        <p>©2017 All Rights Reserved.</p>
                    </div>
                </div>

            </section>

        </div>
    </div>
</div>

</body>
</html>

