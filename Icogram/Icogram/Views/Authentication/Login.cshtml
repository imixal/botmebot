@model Icogram.ViewModels.Login.ErrorViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Icogram</title>
    <!-- Bootstrap -->
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="@Url.Content("~/Content/font-awesome.min.css")" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="@Url.Content("~/Libs/Gentelella/css/custom.min.css")" rel="stylesheet">
</head>
<body class="login">
    <div>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    @using (Html.BeginForm("LoginCommand", "Authentication", FormMethod.Post))
                    {
                        <h1>Login Form</h1>
                        <div>
                            <input type="text" class="form-control" name="Username" placeholder="Username" required=""/>
                        </div>
                        <div>
                            <input type="password" class="form-control" name="Password" placeholder="Password" required=""/>
                        </div>

                        <div>
                            <input type="submit" class="btn btn-default submit" value="Log in">
                            <a class="reset_pass" href="#"><span class="text-danger">@Model.Error</span>. Lost your password?</a>
                        </div>
                    }
                    <div class="clearfix"></div>
                    <div class="separator">
                        <div class="clearfix"></div>
                        <br />
                        <div>
                            <h1><i class="fa fa-paw"></i> Icogram!</h1>
                            <p>©2017 All Rights Reserved.</p>
                        </div>
                    </div>

                </section>
            </div>
        </div>
    </div>
</body>
</html>

