@section scriptsCustom
{
    <script>
        var table = $("#Table").DataTable({
            columnDefs: [{
                targets: [0],
                searchable: true
            }],
            scrollY: $(window).height() - 200,
            scrollCollapse: true,
            dom: '<"left"B> frtl',
            buttons: []
        });

        function setDeleteData(row) {
            localStorage.setItem("row", $(row).parents('tr').html().toString());
            var $row = $(row);
            $("#delete").find("#deleteModalLabel").text("Delete " + $row.parent().parent().find("input[Name=Title]").val());
        }

        function deletecommand() {
            var $row = $(localStorage.getItem("row"));
            $.post('@Url.Action("ChatCommandDeleteCommand")', { id: $row.find("input[Name=chatCommandId]").val() })
            .done(function () {
                location.reload();
            });
        }

        function saveUpdates(row) {
            var $row = $(row).parent().parent();
            $.post('@Url.Action("ChatCommandUpdateCommand")', {
                chatCommandId: $row.find("input[Name=chatCommandId]").val(),
                message: $row.find("textarea[Name=message]").val(),
            }).done(function () {
                location.reload();
            });
        }

        $("#deletecommand").on('click', deletecommand);

        function createCommand(row) {
            var $row = $(row).parent().parent();
            $.post('@Url.Action("ChatCommandEditCommand")',
                {
                     Id: 0,
                     CommandId: $row.find("select[name=commandId]").val(),
                     ChatId: $row.find("select[name=chatId]").val(),
                     Message: $row.find("textarea[name=message]").val()
                })
            .done(function () {
                location.reload();
            });
        }

        $(document)
            .ready(function () {
                $("thead").find("th").first().trigger("click");
                $("thead").find("th").first().trigger("click");
            });
    </script>
}
@Html.Partial("~/Views/Global/Help.cshtml")
<div class="x_panel">
    <div class="x_title">
        <h2>Commands</h2>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="table-responsive">
            <table class="table table-striped jambo_table table-bordered" id="Table">
                <thead>
                <tr class="headings">
                    <th class="column-title">№</th>
                    <th class="column-title text-center">Name</th>
                    <th class="column-title text-center">Chat Name</th>
                    <th class="column-title text-center">Message</th>
                    <th class="column-title text-center last">Actions</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td width="5%"><input class="hidden" name="Id" value="" /> new</td>
                    <td width="15%">
                        <select class="form-control" name="commandId">
                            @foreach (var command in Model.Commands)
                            {
                                <option value="@command.Id">@command.CommandName</option>
                            }
                        </select>
                    </td>
                    <td width="15%">
                        <select class="form-control" name="chatId">
                            @foreach (var chat in Model.Chats)
                            {
                                <option value="@chat.Id">@chat.Title</option>
                            }
                        </select>
                    </td>
                    <td width="60%"><textarea name="message" class="form-control"></textarea></td>
                    <td class="text-center" width="5%">
                        <a class="label label-md label-info" onclick="createCommand(this)"><span class="fa fa-plus"></span></a>
                    </td>
                </tr>
                @foreach (var command in Model.ChatCommands.Select((value, i) => new {j = i + 1, value}))
                {
                    <tr class="">
                        <td width="5%"><input class="hidden" name="chatCommandId" value="@command.value.Id"/> @command.j</td>
                        <td width="15%"><input class="form-control" disabled="disabled" type="text" name="CommandName" value="@command.value.Command.CommandName"/></td>
                        <td width="15%"><input class="form-control" disabled="disabled" type="text" name="Title" value="@command.value.Chat.Title"/></td>
                        <td width="60%"><textarea name="message" class="form-control">@command.value.Message</textarea></td>
                        <td class="text-center" width="5%">
                            <a class="label label-md label-info" onclick="saveUpdates(this)"><span class="fa fa-floppy-o"></span></a>
                            <a class="label label-md label-danger" onclick="setDeleteData(this)" data-toggle="modal" data-target="#delete"><span class="fa fa-trash"></span></a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" id="delete">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="deleteModalLabel">Delete</h4>
            </div>
            <div class="modal-body">
                <input class="hidden" name="userId" />
                <h4>Are you sure?</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="deletecommand" class="btn btn-danger" data-dismiss="modal">Delete</button>
            </div>
        </div>
    </div>
</div>